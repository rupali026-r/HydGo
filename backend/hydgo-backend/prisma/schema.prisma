generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ---------------------------------------------
// HydGo Prisma Schema
// ---------------------------------------------

enum Role {
  PASSENGER
  DRIVER
  ADMIN
}

enum DriverStatus {
  PENDING_APPROVAL
  ACTIVE
  SUSPENDED
}

enum BusType {
  TSRTC_CITY_ORDINARY
  TSRTC_METRO_EXPRESS
  TSRTC_METRO_DELUXE
  TSRTC_SUPER_LUXURY
  TSRTC_GARUDA_PLUS
  TSRTC_RAJDHANI
  TSRTC_PALLE_VELUGU
  TSRTC_EXPRESS
  TSRTC_ELECTRIC_AC
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  name          String?       @db.VarChar(128)
  phone         String?       @db.VarChar(32)
  passwordHash  String
  role          Role          @default(PASSENGER)
  city          String?       @db.VarChar(128)
  driverStatus  DriverStatus?
  busType       BusType?
  licenseNumber String?       @db.VarChar(64)
  experience    Int?
  depotLocation String?       @db.VarChar(256)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  refreshTokens RefreshToken[]
  drivenBuses   Bus[]
}

model RefreshToken {
  id         String   @id @default(cuid())
  token      String   @unique
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  revokedAt  DateTime?
  deviceInfo String?  @db.VarChar(256)
}

model Bus {
  id        String   @id @default(cuid())
  code      String   @unique
  capacity  Int      @default(40)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  routeId String?
  route   Route?   @relation(fields: [routeId], references: [id], onUpdate: Cascade, onDelete: SetNull)

  driverId String?
  driver   User?    @relation(fields: [driverId], references: [id], onUpdate: Cascade, onDelete: SetNull)

  liveLocations LiveLocation[]
}

model Station {
  id        String   @id @default(cuid())
  name      String
  lat       Float
  lng       Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  routes RouteStation[]
}

model Route {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  stations RouteStation[]
  buses    Bus[]
}

model RouteStation {
  id        String  @id @default(cuid())
  routeId   String
  stationId String
  order     Int

  route   Route   @relation(fields: [routeId], references: [id], onDelete: Cascade)
  station Station @relation(fields: [stationId], references: [id], onDelete: Cascade)

  @@unique([routeId, order])
  @@unique([routeId, stationId])
}

model LiveLocation {
  id        String   @id @default(cuid())
  busId     String
  bus       Bus      @relation(fields: [busId], references: [id], onDelete: Cascade)
  lat       Float
  lng       Float
  speed     Float?
  createdAt DateTime @default(now())

  @@index([busId, createdAt])
}
