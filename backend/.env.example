# ── Copy this to Render → Environment → Add variable ────────────────────────
NODE_ENV=production
PORT=3000

# PostgreSQL (Render Postgres add-on → Internal connection string)
DATABASE_URL=postgresql://user:pass@host/db?sslmode=require

# Redis (Render Redis add-on or Upstash)
REDIS_URL=redis://default:pass@host:port

# JWT — generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=replace_with_64_byte_hex
JWT_REFRESH_SECRET=replace_with_different_64_byte_hex
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Admin registration secret
ADMIN_SECRET=replace_with_strong_secret

# Simulation mode — false in production
SIMULATION_MODE=false

# ── CORS: add both Vercel URLs after deployment ──────────────────────────────
# CORS_ORIGIN=https://hydgo-passenger.vercel.app,https://hydgo-driver.vercel.app
CORS_ORIGIN=*
